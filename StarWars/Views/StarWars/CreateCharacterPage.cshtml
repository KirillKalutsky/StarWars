@using StarWars.Api.Client;
@model CreateCharacterViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



<p id="hello"></p>

@section scripts
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css"/>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
    	element = document.querySelector('p#hello');
    	element.textContent = 'Hello World!';
    </script>
}

<div>
    <a href="@Url.Action("Index", "StarWars")" class="elements"><span>Каталог</span></a>
</div>

<div>
    <h1>Добавление персонажа</h1>
</div>

<div>
    @using (Html.BeginForm("CreateCharacter", "StarWars", FormMethod.Post)) 
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CreateCharacterForm.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreateCharacterForm.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreateCharacterForm.Name, "", new { @class = "text-danger" })
            </div>
        </div>
 
        <div class="form-group">
            @Html.LabelFor(model => model.CreateCharacterForm.OriginalName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreateCharacterForm.OriginalName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreateCharacterForm.OriginalName, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.DropDownListFor(model => model.CreateCharacterForm.FilmIds, Model.Films, new { @id="Members", @class= "select2 form-select",  multiple =   
            "multiple", tabindex="3" })  
 
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

</div>